<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_final">

    <Button
        android:id="@+id/listview_layout_GoToArticle1_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/listview_rounded_btn_background"
        android:gravity="left"
        android:padding="15sp"
        android:text="@string/Article1_Title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/listview_layout_GoToArticle2_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/listview_rounded_btn_background"
        android:gravity="left"
        android:padding="15sp"
        android:text="@string/Article2_Title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_layout_GoToArticle1_btn" />

    <Button
        android:id="@+id/listview_layout_GoToArticle3_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/listview_rounded_btn_background"
        android:gravity="left"
        android:padding="15sp"
        android:text="@string/Article3_Title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_layout_GoToArticle2_btn" />

    <Button
        android:id="@+id/listview_layout_GoToArticle4_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/listview_rounded_btn_background"
        android:gravity="left"
        android:padding="15sp"
        android:text="@string/Article4_Title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_layout_GoToArticle3_btn" />

    <Button
        android:id="@+id/listview_layout_GoToArticle5_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/listview_rounded_btn_background"
        android:gravity="left"
        android:padding="15sp"
        android:text="@string/Article5_Title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listview_layout_GoToArticle4_btn" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/AppBarArticle1"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/AppBarColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/Article1_Settings_Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:onClick="setSettingsview"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/settingsnoton"
        app:layout_constraintBottom_toBottomOf="@+id/AppBarArticle1"
        app:layout_constraintEnd_toEndOf="@+id/AppBarArticle1"
        app:layout_constraintTop_toTopOf="@+id/AppBarArticle1"
        app:layout_constraintVertical_bias="0.55" />

    <ImageButton
        android:id="@+id/Article1_Home_Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:onClick="setHomeview"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/homenoton"
        app:layout_constraintBottom_toBottomOf="@+id/AppBarArticle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/AppBarArticle1" />
</androidx.constraintlayout.widget.ConstraintLayout>