<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/HomeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background= "@drawable/treepage_back">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/listButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/roundedbutton"
        app:srcCompat="@drawable/ic_format_list_bulleted"
        android:onClick="setListview"
        app:layout_constraintBottom_toTopOf="@+id/AppBarArticle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967" />

    <Button
        android:id="@+id/GoToArticle1_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:onClick="OpenArticle1"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/AppBarArticle1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/AppBarArticle1"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/AppBarColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/Article1_Settings_Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:onClick="setSettingsview"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/settingsnoton"
        app:layout_constraintBottom_toBottomOf="@+id/AppBarArticle1"
        app:layout_constraintEnd_toEndOf="@+id/AppBarArticle1"
        app:layout_constraintTop_toTopOf="@+id/AppBarArticle1"
        app:layout_constraintVertical_bias="0.55" />

    <ImageButton
        android:id="@+id/Article1_Home_Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:onClick="setHomeview"
        android:background="#00FFFFFF"
        android:scaleType="fitCenter"
        android:src="@drawable/homenoton"
        app:layout_constraintBottom_toBottomOf="@+id/AppBarArticle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/AppBarArticle1" />

    <Button
        android:id="@+id/GoToArticle2_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OpenArticle2"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/GoToArticle1_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/GoToArticle3_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OpenArticle3"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/GoToArticle2_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/GoToArticle4_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OpenArticle4"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/GoToArticle3_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/GoToArticle5_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="OpenArticle5"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/GoToArticle4_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>