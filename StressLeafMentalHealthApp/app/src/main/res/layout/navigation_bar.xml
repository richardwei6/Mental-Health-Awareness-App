<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/AppBar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/AppBarColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/Settings_Button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:onClick="setSettingsview"
        android:scaleType="fitCenter"
        android:src="@drawable/settingsnoton"
        app:layout_constraintBottom_toBottomOf="@+id/AppBar"
        app:layout_constraintEnd_toEndOf="@+id/AppBar"
        app:layout_constraintStart_toEndOf="@+id/Extra_Button"
        app:layout_constraintTop_toTopOf="@+id/AppBar" />

    <ImageButton
        android:id="@+id/Home_Button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:onClick="setHomeview"
        android:scaleType="fitCenter"
        android:src="@drawable/homenoton"
        app:layout_constraintBottom_toBottomOf="@+id/AppBar"
        app:layout_constraintEnd_toStartOf="@+id/Extra_Button"
        app:layout_constraintStart_toStartOf="@+id/AppBar"
        app:layout_constraintTop_toTopOf="@+id/AppBar"
        app:layout_constraintVertical_bias="0.45" />

    <ImageButton
        android:id="@+id/Extra_Button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:background="#00FFFFFF"
        android:onClick="setHomeview"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintBottom_toBottomOf="@+id/AppBar"
        app:layout_constraintTop_toTopOf="@+id/AppBar"
        tools:layout_editor_absoluteX="160dp" />

</androidx.constraintlayout.widget.ConstraintLayout>